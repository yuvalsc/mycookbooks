###############################################################
# Name: set_tpat.env
###############################################################

###################################
# Set local parameters
###################################
export HOST_NAME=`hostname`
export TPAT_TYPE="websphere"
export MENU_TITLE="$HOST_NAME"

###################################
# Set the WAS environment - UNIX
###################################
export TPAT_HOME=<%= @home %>
export APP_HOME=$TPAT_HOME/profiles
export WAS_HOME=/opt/IBM/WebSphere/AppServer
export PROFILE_HOME=$WAS_HOME/profiles
export ORACLE_HOME=/opt/ora11203/product/11.2.0.3/dbhome_1
#export MQ_LIB=/opt/mqm/java/lib64
export JAVA_HOME=$WAS_HOME/java
export VIEWER=view

###################################
# Set the WAS environment - WINDOWS
###################################
#export TPAT_HOME="C:\dh"
#export APP_HOME="$TPAT_HOME\profiles"
#export WAS_HOME="C:\IBM\WebSphere\AppServer"
#export ORACLE_HOME="C:\ORA11203"
#export VIEWER="less"

###################################
# Set WAS parameters
# WAS_TYPE=[WASND|WAS]
###################################
export WAS_TYPE=WASND
export DMGR_NAME=Dmgr01
export ADMIN_HOST=$HOST_NAME
export ADMIN_PORT=9060
export ADMIN_SOAP=9063

###################################
# WAS Global security
###################################
#export ADMIN_SECURITY=YES
#export APP_SECURITY=YES
#export ADMIN_USERNAME=wasadm

###################################
# Set Port Handling
# MANAGE_PORTS=YES - Ports will be managed by this tool
# MANAGE_PORTS=NO  - Ports will be managed by WAS
###################################
export MANAGE_PORTS=YES
export WAS_STARTING_PORT=9090

###################################
# COMMON DB is used by ESB & WPS
# COMMON_DB_TYPE=[DERBY|DB2|ORACLE]
###################################
#export COMMON_DB_TYPE=DERBY

###################################
# Set MQ Coded character set identifier
###################################
export MQ_CCSID=819

###################################
# Set the command line
###################################
PS1='${LOGNAME}@${HOST_NAME}[$PWD]\$ '
export TPAT_AUDIT=YES
